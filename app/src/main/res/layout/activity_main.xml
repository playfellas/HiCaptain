<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_sfondo_grigio_xml">

    <ImageButton
        android:id="@+id/centralImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/_nave"/>

    <ImageButton
        android:id="@+id/pruaImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/centralImageView"
        android:background="@drawable/_prua"/>

    <ImageButton
        android:id="@+id/captainImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pruaImageView"
        android:layout_toStartOf="@+id/centralImageView"
        android:background="@drawable/_capitano"/>

</RelativeLayout>
