<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_sfondo_grigio_xml"
    tools:context="it.playfellas.hicaptain.ObloActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chefButton"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="126dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incastri1Button"
        android:background="@mipmap/ic_launcher"
        android:layout_marginStart="74dp"
        android:layout_alignTop="@+id/chefButton"
        android:layout_toEndOf="@+id/chefButton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incastri2Button"
        android:background="@mipmap/ic_launcher"
        android:layout_marginStart="77dp"
        android:layout_alignTop="@+id/incastri1Button"
        android:layout_toEndOf="@+id/incastri1Button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intruso2Button"
        android:background="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/intruso1Button"
        android:layout_alignStart="@+id/incastri1Button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intruso1Button"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/chefButton"
        android:layout_alignStart="@+id/chefButton"
        android:layout_marginTop="81dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/superappButton"
        android:background="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/intruso2Button"
        android:layout_alignStart="@+id/incastri2Button"/>
</RelativeLayout>
